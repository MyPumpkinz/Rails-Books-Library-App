<% if @book.image.attached? %>
  <%= image_tag @book.image, style: "width:200px; display:block;" %>
<% end %>
<h2> <%= @book.author %></h2>

<h2> <%= @book.title %></h2>
<h2> Category :<%= @book.category.name %></h2>
<h2> <%= @book.description %></h2>
  
<%= link_to "Back", root_path, class:'btn btn-secondary'%>
  
<% if user_signed_in? %>
  <% if current_user %>
    <% if current_user.admin? %>
      <%= link_to "Edit", edit_book_path(@book), class:'btn btn-primary' %>
      <%= link_to "Delete", book_path(@book), method: :delete,class:'btn btn-danger' %>
    <% end %>
  <% end %>    
<% end %>